<h2 style="float: left;"><%= @page_title %></h2>
<%= link_to ({:controller => :admin, :action => :new}, :class => "btn btn-success", :style => "float: right;") do %>
    <i class="icon-plus-sign icon-white"></i> New admin
<% end %>
<div class="cleaner"></div>

<table class="table table-condensed">
  <thead>
  <tr>
    <th>Email</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @admins.each { |admin| %>
      <tr>
        <td><%= link_to admin.mail, "mailto:" + admin.mail %></td>
        <td>
          <%= link_to({:controller => :admin, :action => :delete, :id => admin}, :method => :post, :confirm => "Are you sure?", :class => "btn btn-danger") do %>
              <i class="icon-trash icon-white"></i> Delete
          <% end %>
        </td>
      </tr>
  <% } %>
  </tbody>
</table>
