<h2><%= @page_title %></h2>
<%= form_for :user, :html => {:class => "form-horizontal"} do |f| %>
    <%= f.error_messages(:class => "alert alert-block alert-error", :header_tag => "h4", :message => nil) %>
    <fieldset>
      <legend></legend>
      <div class="control-group">
        <%= f.label(:first_name, "First name:", :class => "control-label") %>
        <div class="controls">
          <%= f.text_field(:first_name, :required => true, :class => "input-xlarge") %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label(:last_name, "Last name:", :class => "control-label") %>
        <div class="controls">
          <%= f.text_field(:last_name, :required => true, :class => "input-xlarge") %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label(:mail, "E-mail:", :class => "control-label") %>
        <div class="controls">
          <%= f.text_field(:mail, :required => true, :class => "input-xlarge", :type => "email") %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label(:pass, "Password:", :class => "control-label") %>
        <div class="controls">
          <%= f.password_field(:pass, :required => true, :class => "input-xlarge") %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label(:pass_confirmation, "Password confirmation:", :class => "control-label") %>
        <div class="controls">
          <%= f.password_field(:pass_confirmation, :required => true, :class => "input-xlarge") %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.submit("Save", :class => "btn btn-primary") %>
        <%= button_tag("Cancel", :type => "button", :class => "btn", :onclick => "window.history.back()") %>
      </div>
    </fieldset>
<% end %>
