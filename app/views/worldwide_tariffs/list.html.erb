<h2 style="float: left;"><%= @page_title %></h2>
<%= link_to ({:controller => :worldwide_tariffs, :action => :new}, :class => "btn btn-success", :style => "float: right;") do %>
    <i class="icon-plus-sign icon-white"></i> New country
<% end %>
<div class="cleaner"></div>

<table class="table table-condensed">
  <thead>
  <tr>
    <th>Country</th>
  </tr>
  </thead>
  <tbody>
  <% @tariffs.each { |tariff| %>
      <tr>
        <td><%= link_to tariff.country, {:controller => :worldwide_tariffs, :action => :edit, :id => tariff} %></td>
      </tr>
  <% } %>
  </tbody>
</table>