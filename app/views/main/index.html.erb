<div class="eventBig">
  <%= link_to (image_tag "/pictures/e_b/" + @latest_event.big_image.file_name), {:controller => :main, :action => :event, :id => @latest_event} %>

  <div class="slideWrapper">
    <div class="rotatorWrapper">
      <button class="prev input-newmember"><<</button>
      <button class="next input-member">>></button>
      <div class="eventProducts">
        <ul>
          <% @latest_event.products.each { |product| %>
              <li><%= link_to(image_tag("/pictures/s/" + product.images.first.file_name), {:controller => :main, :action => :product, :id => product}) %></li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</div>
<% vis_el = @latest_event.products.count
   vis_el = 7 if vis_el > 7
%>
<script type="text/javascript">
    var vis_el = <%=  vis_el %>;
</script>

<div class="space"></div>
<div class="events_wrapper">
  <% counter = 0 %>
  <% @events.each { |event| %>
      <%= link_to({:controller => :main, :action => :event, :id => event}, :class => "eventImage") do %>
          <%= image_tag "/pictures/e/" + event.small_image.file_name, :class => "vspace" %>
      <% end %>
      <% counter += 1 %>
      <% if counter%4 == 0 %>
          <div class="space"></div>
      <% end %>
  <% } %>
</div>
