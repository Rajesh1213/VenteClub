<h2><%= @page_title %></h2>

<%= form_tag({}, :class => "form-horizontal", :id => "fmh") do %>
    <legend></legend>
    <div class="control-group">
      <%= label_tag(:top_category_id, "Top category:", :class => "control-label") %>
      <div class="controls">
        <%= select_tag(:top_category_id, options_for_select(@top_categories.collect { |top_category| [top_category.name, top_category.id] }, @top_category.id), {:required => true, :class => "input-xlarge"}) %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag(:url, "URL:", :class => "control-label") %>
      <div class="controls">
        <%= text_field_tag(:url, "", :required => true, :class => "input-xlarge") %>
      </div>
    </div>
    <div class="form-actions">
      <%= submit_tag("Save", :class => "btn btn-primary", :id => "fmh_submit") %>
      <%= button_tag("Cancel", :type => "button", :class => "btn", :onclick => "window.history.back()") %>
    </div>
<% end %>