<div class="checkoutHeader">
  Payment Method
</div>
<div class="checkoutContent">

  <div class="column">
    <h1>
      Choose a payment method:
    </h1>
    <% @current_user.credit_cards.all.each { |credit_card| %>
        <div class="shippingAddressWrapper">
          <%= link_to("PAY WITH >>", {:controller => :checkout, :action => :payment_method, :id => credit_card}, :class => "input-newmember", :method => :post) %>
          <%= render :partial => "checkout/card_template", :locals => {:credit_card => credit_card} %>
        </div>
    <% } %>
  </div>

  <div class="column">
    <h1>
      Or enter a new credit card information:
    </h1>

    <div class="content-body" style="float: left;">
      <%= form_for :credit_card, :as => @credit_card, :url => {}, :method => :post, :html => {:class => "form-horizontal"} do |credit_card| %>
          <%= render :partial => "checkout/credit_card_fields", :locals => {:credit_card => credit_card} %>
          <div class="cleaner"></div>
      <% end %>
    </div>

  </div>
  <div class="cleaner"></div>
</div>