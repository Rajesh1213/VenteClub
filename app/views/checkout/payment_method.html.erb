<div class="checkoutHeader">
  Payment Method
</div>
<div class="checkoutContent">
  <div class="column">
    <h1>
      Credit card information:
    </h1>

    <div class="content-body" style="float: left;">
      <%= form_tag @credit_card, :method => :post, :html => {:class => "form-horizontal"} do %>
          <div class="dataRow">
            <%= label_tag(:cardholder_name, "Cardholder name:") %>
            <%= text_field_tag(:cardholder_name, "", :required => true) %>
          </div>
          <div class="dataRow">
            <%= label_tag(:card_number, "Card number:") %>
            <%= text_field_tag(:card_number, "", :required => true) %>
          </div>
          <div class="dataRow">
            <%= label_tag(:expiration_month, "Expiration date:") %>
            <%= select_tag(:expiration_month, options_for_select(1..12, 1), :style => "width:50px;float:left;margin-left:32px;", :required => true) %>
            <%= select_tag(:expiration_year, options_for_select(Date.today.year..Date.today.year + 10, Date.today.year), :style => "width:75px;float:left;margin-left:20px", :required => true) %>
          </div>
          <%= submit_tag("Continue Checkout >>", :class => "input-member", :style => "width: 150px;") %>
          <div class="cleaner"></div>
      <% end %>
    </div>

  </div>
  <div class="cleaner"></div>
</div>