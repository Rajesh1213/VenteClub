<div class="checkoutHeader">
  Edit Billing Address
</div>
<div class="checkoutContent">
  <div class="content-body" style="float: left;">
    <%= form_for @billing_address, :as => :billing_address, :url => {:controller => :checkout, :action => :edit_billing_address}, :method => :post, :html => {:class => "form-horizontal"} do |address| %>
        <%= render :partial => "checkout/address_fields", :locals => {:address => address} %>
        <div class="cleaner"></div>
    <% end %>
  </div>
  <div class="cleaner"></div>
</div>