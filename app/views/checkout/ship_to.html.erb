<div class="checkoutHeader">
  Shipping Address
</div>
<div class="checkoutContent">
  <div class="column">
    <h1>
      Choose a shipping address:
    </h1>
    <% @current_user.shipping_addresses.all.each { |shipping_address| %>
        <div class="shippingAddressWrapper">
          <%= link_to("SHIP TO >>", {:controller => :checkout, :action => :ship_to, :id => shipping_address}, :class => "input-newmember", :method => :post) %>
          <%= render :partial => "checkout/address_template", :locals => {:address => shipping_address, :edit_action => "edit_shipping_address"} %>
        </div>
    <% } %>
  </div>

  <div class="column">
    <h1>
      Or enter a new shipping address
    </h1>

    <div class="content-body" style="float: left;">
      <%= form_for @shipping_address, :as => :shipping_address, :url => {:controller => :checkout, :action => :ship_to}, :method => :post, :html => {:class => "form-horizontal"} do |address| %>
          <%= render :partial => "checkout/address_fields", :locals => {:address => address} %>
          <div class="cleaner"></div>
      <% end %>
    </div>
    <div class="cleaner"></div>
  </div>
  <div class="cleaner"></div>
</div>
