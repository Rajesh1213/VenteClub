<%= form_for :color, :html => {:class => "form-horizontal"} do |f| %>
    <%= f.error_messages(:class => "alert alert-block alert-error", :header_tag => "h4", :message => nil) %>
    <fieldset>
      <legend></legend>
      <div class="control-group">
        <%= f.label(:name, "Name:", :class => "control-label") %>
        <div class="controls">
          <%= f.text_field(:name, :required => true, :class => "input-xlarge") %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label(:html_val, "HTML color code:", :class => "control-label") %>
        <div class="controls">
          <%= f.text_field(:html_val, :required => true, :class => "input-xlarge") %>
        </div>
      </div>

      <div id="colorpicker"></div>


      <div class="form-actions">
        <%= f.submit("Save", :class => "btn btn-primary") %>
        <%= button_tag("Cancel", :type => "button", :class => "btn", :onclick => "window.history.back()") %>
      </div>
    </fieldset>
<% end %>