<div class="row">
  <div class="span3"><br/></div>
  <div class="span6">
    <%= form_for :user, :html => {:class => "form-horizontal"} do |f| %>
        <%= f.error_messages(:class => "alert alert-block alert-error", :header_tag => "h4", :message => nil) %>
        <%= f.hidden_field :mail %>
        <fieldset>
          <legend>Reset password</legend>
          <div class="control-group">
            <%= f.label(:pass, "New Password:", :class => "control-label") %>
            <div class="controls">
              <%= f.password_field(:pass, :required => true, :class => "input-xlarge") %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label(:pass_confirmation, "Confirmation:", :class => "control-label") %>
            <div class="controls">
              <%= f.password_field(:pass_confirmation, :required => true, :class => "input-xlarge") %>
            </div>
          </div>
          <div class="form-actions">
            <%= f.submit("Save", :class => "btn btn-primary") %>
            <%= button_tag("Cancel", :type => "button", :class => "btn", :onclick => "window.history.back()") %>
          </div>
        </fieldset>
    <% end %>
  </div>
</div>