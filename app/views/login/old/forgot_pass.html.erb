<div class="row">
  <div class="span3"><br/></div>
  <div class="span6">
    <%= form_tag({:controller => :login, :action => :forgot_pass}, :class => "form-horizontal") do %>
        <fieldset>
          <legend>Password recovery</legend>
          <div class="control-group">
            <%= label_tag "mail", "Email:", :class => "control-label" %>
            <div class="controls">
              <%= text_field_tag "mail", "", :required => true, :class => "input-xlarge" %>
            </div>
          </div>
          <div class="form-actions">
            <%= submit_tag "Send Instructions", :class => "btn btn-primary" %>
            <%= button_tag("Cancel", :type => "button", :class => "btn", :onclick => "window.history.back()") %>
          </div>
        </fieldset>
    <% end %>
  </div>
</div>