<div class="row">
  <div class="span3"><br/></div>
  <div class="span6">
    <%= form_tag({:controller => :login, :action => :log_in}, :class => "form-horizontal") do %>
        <fieldset>
          <legend>Log In to VenteClub web admin</legend>
          <div class="control-group">
            <%= label_tag "mail", "Email:", :class => "control-label" %>
            <div class="controls">
              <%= text_field_tag "mail", "", :required => true, :class => "input-xlarge" %>
            </div>
          </div>
          <div class="control-group">
            <%= label_tag "pass", "Password:", :class => "control-label" %>
            <div class="controls">
              <%= password_field_tag "pass", "", :required => true, :class => "input-xlarge" %>
            </div>
          </div>
          <div class="form-actions">
            <%= submit_tag "Log In", :class => "btn btn-primary" %>
            <%= link_to "Forgotten Password", {:controller => :login, :action => :forgot_pass}, :class => "btn" %>
          </div>
        </fieldset>
    <% end %>
  </div>
</div>