<h2 style="float: left;"><%= @page_title %></h2>
<%= link_to({:controller => :product_types, :action => :new}, :html_options => {:class => "btn btn-success", :style => "float: right;"}) do %>
    <i class="icon-plus-sign icon-white"></i> New product type
<% end %>
<div class="cleaner"></div>

<table class="table table-condensed">
  <thead>
  <tr>
    <th colspan="3">Name</th>
  </tr>
  </thead>
  <tbody>
  <% @product_types.each { |product_type| %>
      <tr>
        <th colspan="2"><%= link_to product_type.name, :controller => :product_types, :action => :edit, :id => product_type %></th>
        <td>
          <%= link_to ({:controller => :flat_rate_products, :action => :new, :id => product_type}, :class => "btn btn-success", :style => "float: right;") do %>
              <i class="icon-plus-sign icon-white"></i> New flat rate product
          <% end %>
        </td>
      </tr>
      <% product_type.flat_rate_products.each { |flat_rate_product| %>
          <tr>
            <td></td>
            <td colspan="2"><%= link_to flat_rate_product.name, :controller => :flat_rate_products, :action => :edit, :id => flat_rate_product %></td>
          </tr>
      <% } %>
  <% } %>
  </tbody>
</table>